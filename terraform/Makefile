.PHONY: help init plan apply destroy output validate format clean setup

# Default target
help:
	@echo "AWS Amplify Terraform Commands"
	@echo "==============================="
	@echo ""
	@echo "Setup & Configuration:"
	@echo "  make setup      - Interactive setup wizard"
	@echo "  make init       - Initialize Terraform"
	@echo "  make validate   - Validate configuration"
	@echo ""
	@echo "Deployment:"
	@echo "  make plan       - Preview infrastructure changes"
	@echo "  make apply      - Deploy to AWS"
	@echo "  make output     - Show deployment URLs"
	@echo ""
	@echo "Maintenance:"
	@echo "  make format     - Format Terraform files"
	@echo "  make destroy    - Destroy all infrastructure (careful!)"
	@echo "  make clean      - Clean local Terraform files"
	@echo ""

# Interactive setup
setup:
	@./setup.sh

# Initialize Terraform
init:
	@echo "ğŸ”§ Initializing Terraform..."
	@terraform init

# Validate configuration
validate: init
	@echo "âœ“ Validating configuration..."
	@terraform validate

# Format Terraform files
format:
	@echo "ğŸ“ Formatting Terraform files..."
	@terraform fmt -recursive

# Preview changes
plan: validate
	@echo "ğŸ“Š Planning deployment..."
	@terraform plan

# Deploy to AWS
apply: validate
	@echo "ğŸš¢ Deploying to AWS Amplify..."
	@terraform apply

# Quick deploy (auto-approve)
deploy: validate
	@echo "ğŸš¢ Deploying to AWS Amplify (auto-approve)..."
	@terraform apply -auto-approve

# Show outputs
output:
	@echo "ğŸ“ Deployment Information:"
	@terraform output

# Destroy infrastructure
destroy:
	@echo "âš ï¸  WARNING: This will destroy all infrastructure!"
	@terraform destroy

# Clean local files
clean:
	@echo "ğŸ§¹ Cleaning local Terraform files..."
	@rm -rf .terraform
	@rm -f .terraform.lock.hcl
	@rm -f terraform.tfstate
	@rm -f terraform.tfstate.backup
	@rm -f crash.log
	@echo "âœ“ Cleaned!"

# Check AWS credentials
check-aws:
	@echo "ğŸ” Checking AWS credentials..."
	@aws sts get-caller-identity || (echo "âŒ AWS credentials not configured. Run: aws configure" && exit 1)
	@echo "âœ“ AWS credentials OK!"

# Full deployment workflow
deploy-full: check-aws validate plan
	@echo ""
	@read -p "Deploy to AWS? (yes/no): " confirm && [ "$$confirm" = "yes" ] && make apply || echo "Cancelled"
