# Copy this file to terraform.tfvars and fill in your values
# NEVER commit terraform.tfvars to version control!

aws_region         = "us-east-1"
environment        = "production"
app_name           = "arch-network-docs"
main_branch_name   = "main"

# GitHub Configuration
# Create a personal access token at: https://github.com/settings/tokens
# Required scopes: repo (full control of private repositories)
github_repository    = "https://github.com/YOUR_USERNAME/YOUR_REPO"
github_access_token  = "ghp_your_github_personal_access_token_here"

# Site Configuration
site_url = "https://docs.arch.network"

# Custom Domain (optional - leave empty to use Amplify default domain)
custom_domain = ""  # e.g., "docs.arch.network"
domain_prefix = ""  # e.g., "www" or leave empty for root domain

# Auto Branch Creation (optional - for preview deployments)
enable_auto_branch_creation   = false
auto_branch_creation_patterns = ["feature/*", "fix/*"]

# Additional Environment Variables (optional)
additional_environment_variables = {
  # Add any custom environment variables your app needs
  # Example:
  # NEXT_PUBLIC_API_URL = "https://api.example.com"
}

branch_environment_variables = {
  # Branch-specific environment variables
}
